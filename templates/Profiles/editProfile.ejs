<div class="d-flex justify-content-between flex-md nowrap align-items-center pt-3 pb-2 mb-2 border-bottom">
    <h1 class="h2">Editing ( <%= user.fname %> <%= user.lname %> )</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary" class="btn btn-sm btn-outline-secondary">?</a>
        </div>
    </div>
</div>
<div class="col-py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/profile">Dashboard</a></li>
                    <li class="breadcrumb-item active"><%= user.name %></li> 
                </ol>
            </nav>
        </div>
        <div class="col text-end-fw-lighter">
            <b>Last Updated <%=  new Date(user.updatedAt).toUTCString() %></b><br/>
            <b class="text-danger">UserId: </b><%= user._id %>
        </div>
    </div>
</div>

<form action="/profile/editProfile/<%= user._id %>?_method=PUT" method="POST">

    <div class="row form-group mb-4">
        <div class="col">
            <label for="firstName">First Name</label>
            <input type="text" name="fname" class="form-control" id="firstName" value="<%= user.fname %>" placeholder="First Name"
                >
        </div>
        <div class="col">
            <label for="firstName">Last Name</label>
            <input type="text" name="lname" class="form-control" id="firstName" value="<%= user.lname %>" placeholder="First Name"
                >
        </div>
        <div class="col">
            <label for="lastName"> User Name</label>
            <input type="text" name="userName" class="form-control" id="lastName" value="<%= user.userName %>" placeholder="First Name"
                >
        </div>
    </div>
    <div class="row form-group mb-4">
        <div class="col">
            <label for="tel">About</label>
            <input type="text" name="about" class="form-control" id="tel" value="<%= user.about %>" placeholder="Telephone">
        </div>
        <div class="col">
            <label for="email">Intrest</label>
            <input type="text" name="Intrest" class="form-control" id="email" value="<%= user.Intrest %>" placeholder="Email">
        </div>
        <div class="col">
            <label for="email">Country</label>
            <input type="text" name="country" class="form-control" id="email" value="<%= user.country %>" placeholder="Email">
        </div>
    </div>


    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Update user</button>



        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete user</button>
    </div>
    

</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">You are about to remove a user record!</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
            </div>
                <div class="modal-body">
                    <p>
                        This will remove the user record of <b class="fw-bold"><%= user.name %></b><br>
                        Are you sure?
                    </p>
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"data-bs-dismiss="modal">Close</button>

                <form action="/editProfile/<%= user._id %>?_method=DELETE" method="post" class="position-relative">
                <button type="submit" class="btn btn-primary"> Yes, Remove ptofile</button></form>
            </div>
        </div>
    </div>
</div>