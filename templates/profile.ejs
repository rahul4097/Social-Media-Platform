
<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-4 border-bottom">
      <h1 class="h2 text-secondary">Dash-Board</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
              <a href="/profile/createProfile" class="btn btn-sm btn-outline-secondary">+ New User</a>
          </div>
      </div>
  </div>

  <div class="table-responsive">
      <table class="table table-striped table-sm">
          <thead>
              <tr>
                  <th scope="col">Name</th>
                  <th scope="col">About</th>
                  <th scope="col">Intrest</th>
                  <th scope="col">Country</th>
                  <th scope="col" class="text-end">Action</th>
              </tr>
          </thead> 
          <tbody>
              <% myProfile.forEach(user => { %>
                  <tr class="align-middle">
                      <td> <%=user.fname %> <%=user.lname %></td>
                      <td> <%=user.about %></td>
                      <td>  <%=user.Intrest %></td>
                      <td>  <%=user.country %></td>
                      <td class="text-end"> 
                        <div class="btn-group" role="group" aria-label="Action Buttons">
                            <a href="/profile/viewAllProfile/<%= user._id %>" class="btn btn-secondary m-1 btn-small"><i class="bi bi-eye"></i></a>

                            <a href="/profile/viewProfile/<%= user._id %>" class="btn btn-secondary m-1 btn-small"><i class="bi bi-eye"></i></a>
                            <a href="/profile/editProfile/<%= user._id %>" class="btn btn-warning m-1 rounded btn-small"><i class="bi bi-pencil"></i></a>
                            <form action="/profile/editProfile/<%= user._id %>?_method=DELETE" method="POST" class="position-relative">
                                <button type="submit" class="btn btn-danger m-1 btn-small"><i class="bi-solid bi-trash"></i></button>
                            </form>
                        </div>
                      </td>
                  </tr>
              <% }) %>
          </tbody>
      </table>
  </div>
</div>
