<div class="d-flex justify-content-between flex-md nowrap align-items-center pt-3 pb-2 mb-2 border-bottom">
    <h1 class="h2">Editing ( <%= postEdit.userName %>)</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary" class="btn btn-sm btn-outline-secondary">?</a>
        </div>
    </div>
</div>
<div class="col-py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/post">Dashboard</a></li>
                    <li class="breadcrumb-item active"><%= postEdit.userName %></li> 
                </ol>
            </nav>
        </div>
        <div class="col text-end-fw-lighter">
            <b>Last Updated <%=  new Date(postEdit.updatedAt).toUTCString() %></b><br/>
            <b class="text-danger">postEditId: </b><%= postEdit._id %>
        </div>
    </div>
</div>

<form action="/post/editPost/<%= postEdit._id %>?_method=PUT" method="POST">

    <div class="row form-group mb-4">
        <div class="col">
            <label for="firstName">Content</label>
            <input type="text" name="content" class="form-control" id="firstName" value="<%= postEdit.content %>" placeholder="change your content"
                >
        </div>
        <div class="col">
            <label for="firstName">Description</label>
            <input type="text" name="description" class="form-control" id="firstName" value="<%= postEdit.description %>" placeholder="change your descreiption"
                >
        </div>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Update Post</button>



        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete postEdit</button>
    </div>
    

</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">You are about to remove a postEdit record!</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
            </div>
                <div class="modal-body">
                    <p>
                        This will remove the postEdit record of <b class="fw-bold"><%= postEdit.userName %></b><br>
                        Are you sure?
                    </p>
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"data-bs-dismiss="modal">Close</button>

                <form action="/post/editPost/<%= postEdit._id %>?_method=DELETE" method="post" class="position-relative">
                <button type="submit" class="btn btn-primary"> Yes, Remove ptofile</button></form>
            </div>
        </div>
    </div>
</div>