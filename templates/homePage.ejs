
<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-4 border-bottom">
      <h1 class="h2 text-secondary">Dash-Board</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
              <a href="/signup" class="btn btn-sm btn-outline-secondary">+ New User</a>
          </div>
      </div>
  </div>

  <div class="table-responsive">
      <table class="table table-striped table-sm">
          <thead>
              <tr>
                  <th scope="col">Name</th>
                  <th scope="col">User Name</th>
                  <th scope="col">password</th>
                  <!-- <th scope="col">Email</th> -->
                  <th scope="col" class="text-end">Action</th>
              </tr>
          </thead> 
          <tbody>
              <% myUser.forEach(users => { %>
                  <tr class="align-middle">
                      <td> <%=users.name %></td>
                      <td> <%=users.userName %></td>
                      <td> xxxx</td>
                      <td class="text-end"> 
                        <div class="btn-group" role="group" aria-label="Action Buttons">
                            <a href="/view/<%= users._id %>" class="btn btn-secondary m-1 btn-small"><i class="bi bi-eye"></i></a>
                            <a href="/edit/<%= users._id %>" class="btn btn-warning rounded m-1 btn-small"><i class="bi bi-pencil"></i></a>
                            <form action="/edit/<%= users._id %>?_method=DELETE" method="POST" class="position-relative">
                                <button type="submit" class="btn btn-danger m-1 btn-small"><i class="bi-solid bi-trash"></i></button>
                            </form>
                        </div>
                      </td>
                  </tr>
              <% }) %>
          </tbody>
      </table>
  </div>
</div>
