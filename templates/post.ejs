
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-4 border-bottom">
        <h1 class="h2 text-secondary">Dash-Board</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <a href="/post/createPost" class="btn btn-sm btn-outline-secondary">+ New Post</a>
            </div>
        </div>
    </div>
  
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">User Name</th>
                    <th scope="col">Content</th>
                    <th scope="col">Description</th>
                    <th scope="col">Like</th>
                    <th scope="col">Comment</th>
                    <th scope="col" class="text-end">Action</th>
                </tr>
            </thead> 
            <tbody>
                <% myPost.forEach(postUser => { %>
                    <tr class="align-middle">
                        <td> <%=postUser.userName %></td>
                        <td> <%=postUser.content %></td>
                        <td>  <%=postUser.description %></td>
                        <td>  <%=postUser.like %></td>
                        <td>  <%=postUser.comment %></td>
                        <td class="text-end"> 
                          <div class="btn-group" role="group" aria-label="Action Buttons">
                              <a href="/post/viewPost/<%= postUser._id %>" class="btn btn-secondary m-1 btn-small"><i class="bi bi-eye"></i></a>
                              <a href="/post/editPost/<%= postUser._id %>" class="btn btn-warning m-1 rounded btn-small"><i class="bi bi-pencil"></i></a>
                              <form action="/post/editPost/<%= postUser._id %>?_method=DELETE" method="POST" class="position-relative">
                                  <button type="submit" class="btn btn-danger m-1 btn-small"><i class="bi-solid bi-trash"></i></button>
                              </form>
                          </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
  </div>
  